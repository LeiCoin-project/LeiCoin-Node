+//module.exports = require('node-gyp-build')(__dirname)
+
+const node_gyp_build = require('node-gyp-build');
+
+const os = require('os');
+
+const vars = (process.config && process.config.variables) || {}
+const runtime = (typeof isElectron === "function" && isElectron()) ?
+                'electron' : ((typeof isNwjs === "function" && isNwjs()) ? 
+                    'node-webkit' : 'node'
+                )
+const arch = process.env.npm_config_arch || os.arch()
+const platform = process.env.npm_config_platform || os.platform()
+const libc = process.env.LIBC || ((typeof isAlpine === "function" && isAlpine(platform)) ? 'musl' : 'glibc')
+const armv = process.env.ARM_VERSION || (arch === 'arm64' ? '8' : vars.arm_version) || ''
+
+const bindings = {
+    "android-arm": () => require("./prebuilds/android-arm/classic-level.armv7.node"),
+    "android-arm64": () => require("./prebuilds/android-arm64/classic-level.armv8.node"),
+
+    //"darwin-arm64": () => require("./prebuilds/darwin-x64arm64/classic-level.node"),
+    //"darwin-x64": () => require("./prebuilds/darwin-x64arm64/classic-level.node"),
+    "darwin-arm64": () => require("./prebuilds/darwin-x64+arm64/classic-level.node"),
+    "darwin-x64": () => require("./prebuilds/darwin-x64+arm64/classic-level.node"),
+    
+    "linux-arm-v6": () => require("./prebuilds/linux-arm/classic-level.armv6.node"),
+    "linux-arm-v7": () => require("./prebuilds/linux-arm/classic-level.armv7.node"),
+    "linux-arm64": () => require("./prebuilds/linux-arm64/classic-level.armv8.node"),
+
+    "linux-x64-glibc": () => require("./prebuilds/linux-x64/classic-level.node"),
+    "linux-x64-musl": () => require("./prebuilds/linux-x64/classic-level.musl.node"),
+
+    "win32-ia32": () => require("./prebuilds/win32-ia32/classic-level.node"),
+    "win32-x64": () => require("./prebuilds/win32-x64/classic-level.node"),
+}
+
+function getBindingName() {
+    const tags = [
+        platform,
+        arch
+    ]
+
+    if (armv && armv !== "8") {
+        tags.push(`v${armv}`)
+    }
+
+    if (libc && tags[0] === "linux" && tags[1] === "x64") {
+        tags.push(libc)
+    }
+
+    return tags.join("-");
+}
+
+function getBinding() {
+    const binding = bindings[getBindingName()];
+    if (binding) {
+        return binding();
+    }
+
+    return node_gyp_build(__dirname)
+}
+
+module.exports = getBinding();
